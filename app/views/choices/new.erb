<p> <%= @choice[:description] %>
<%= form_tag("/choices", method: "post") do %>
  <%= hidden_field_tag :player_id, @player[:id]%>
  <% @choice[:options].each do |option| %>
    <%= radio_button_tag(:option_id, option[:id]) %>
    <%= label_tag("option_#{option[:id]}", option[:description]) %>
    <br/>
  <% end %>
  <%= submit_tag("Submit") %>
<% end %>
